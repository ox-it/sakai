<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean class="org.springframework.web.servlet.mvc.annotation.FilteredAnnotationHandlerMapping">
		<property name="order" value="1" />
		<property name="target" value="sakai.hierarchy-manager" />
		<!-- This makes use do the lookup based on the path info -->
		<property name="urlPathHelper">
			<bean class="org.sakaiproject.hierarchy.tool.vm.PathInfoHelper"></bean>
		</property>
		<!-- This is because by default the handler just looks in the current context, as we share beans in the parent context we need to look there 
			as well. -->
		<property name="detectHandlersInAncestorContexts" value="true" />
	</bean>



</beans>