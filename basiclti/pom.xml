	<pluginRepositories>
	    <pluginRepository>
	        <id>maven2-central-repo</id>
	        <name>Maven2 Central Repo</name>
	        <url>http://repo1.maven.org/maven2/</url>
	        <releases>
	            <enabled>true</enabled>
	        </releases>
	        <snapshots>
	            <enabled>false</enabled>
	        </snapshots>
	    </pluginRepository>
