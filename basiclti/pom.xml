	        <layout>default</layout>
	        <url>http://source.sakaiproject.org/maven2-snapshots</url>
	        <releases>
	            <enabled>false</enabled>
	        </releases>
	        <snapshots>
	            <enabled>true</enabled>
	        </snapshots>
	    </repository>
	    <repository>
	        <id>default</id>
	        <name>Maven Repository Switchboard</name>
	        <layout>default</layout>
	        <url>http://repo1.maven.org/maven2</url>
	        <releases>
	            <enabled>true</enabled>
	        </releases>
	        <snapshots>
	            <enabled>false</enabled>
	        </snapshots>
	    </repository>
	</repositories>
    
