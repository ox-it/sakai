<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- This is crucial to getting the annotations to work. -->
	<context:annotation-config />

	<bean id="uk.ac.ox.oucs.vle.CourseSignupService"
		  class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<value type="java.lang.Class">uk.ac.ox.oucs.vle.CourseSignupService</value>
		</constructor-arg>
	</bean>

	<bean id="org.sakaiproject.component.api.ServerConfigurationService"
		  class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<value type="java.lang.Class">org.sakaiproject.component.api.ServerConfigurationService</value>
		</constructor-arg>
	</bean>

	<bean id="uk.ac.ox.oucs.vle.SakaiProxy"
		  class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<value type="java.lang.Class">uk.ac.ox.oucs.vle.SakaiProxy</value>
		</constructor-arg>
	</bean>

</beans>
