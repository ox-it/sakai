<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="import-pool-title" />
	</title>

	<header>
		<message selector="import-pool-header">
			<model type="icon" icon="/icons/import_export.png" />
		</message>
	</header>

	<container>

		<navigationBar />

		<section>
			<container>
				<section>
					<container>
						<navigation title="import-paste" style="LINK">
							<icon icon="/icons/import_pool.png" style="LEFT" />
							<destination template="/import_text/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-paste-instructions" />
						</instructions>
						<gap />
					</container>
				</section>

				<section>
					<container>
						<navigation title="import-qti" style="LINK">
							<icon icon="/icons/import_pool.png" style="LEFT" />
							<destination template="/import_qti/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-qti-instructions" />
						</instructions>
						<gap />
					</container>
				</section>

				<section>
					<included>
						<decision model="mneme" />
					</included>
					<container>
						<navigation title="import-mneme-sites" style="LINK">
							<icon icon="/icons/import_assessment.png" style="LEFT" />
							<destination template="/import_mneme_site/pools/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-mneme-sites-instructions" />
						</instructions>
						<gap />
					</container>
				</section>

				<section>
					<included>
						<decision model="tq" />
					</included>
					<container>
						<navigation title="import-tq-pools" style="LINK">
							<icon icon="/icons/import_pool.png" style="LEFT" />
							<destination template="/import_tq_pool/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-tq-pools-instructions" />
						</instructions>
						<gap />
					</container>
				</section>

				<section>
					<included>
						<decision model="tq" />
					</included>
					<container>
						<navigation title="import-tq-assessment-questions" style="LINK">
							<icon icon="/icons/import_assessment.png" style="LEFT" />
							<destination template="/import_tq_site/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-tq-assessment-questions-instructions" />
						</instructions>
						<gap />
					</container>
				</section>

				<section>
					<included>
						<decision model="assignment" />
					</included>
					<container>
						<navigation title="import-asn-sites" style="LINK">
							<icon icon="/icons/import_assessment.png" style="LEFT" />
							<destination template="/import_asn_site/{0}">
								<model ref="poolsSort" />
							</destination>
						</navigation>
						<instructions>
							<message selector="import-asn-sites-instructions" />
						</instructions>
					</container>
				</section>
			</container>
		</section>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="return" style="BUTTON" accessKey="return-access" description="return-description">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/pools/{0}">
						<model ref="poolsSort" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
