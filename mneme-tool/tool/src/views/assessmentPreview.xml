<interface autoComplete="FALSE">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<!-- title & header-->
	<title>
		<message selector="assessment-preview-title">
			<model ref="assessment.title" type="text" />
		</message>
	</title>
	<header>
		<message selector="assessment-preview-header">
			<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
			<model ref="assessment.title" type="text" />
		</message>
	</header>

	<container>

		<!-- repeat the nav up top w/o access key -->
		<navigationBar>
			<container>
				<navigation title="prev" description="preview-prev-description" style="BUTTON">
					<icon icon="/icons/prev.gif" style="LEFT" />
					<disabled>
						<hasValueDecision reversed="TRUE" model="prevAssessmentId" />
					</disabled>
					<destination template="/assessment_preview/{0}{1}">
						<model ref="prevAssessmentId" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="position" />
					</included>
				</navigation>
				<text>
					<message selector="n-of-size">
						<model ref="position" />
						<model ref="size" />
					</message>
					<included>
						<hasValueDecision model="position" />
					</included>
				</text>
				<navigation title="next" description="preview-next-description" style="BUTTON">
					<icon icon="/icons/next.gif" style="RIGHT" />
					<disabled>
						<hasValueDecision reversed="TRUE" model="nextAssessmentId" />
					</disabled>
					<destination template="/assessment_preview/{0}{1}">
						<model ref="nextAssessmentId" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="position" />
					</included>
				</navigation>
				<divider>
					<included>
						<hasValueDecision model="position" />
					</included>
				</divider>
				<navigation title="return" description="return-description" style="BUTTON">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="{0}">
						<model ref="return" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

		<!-- test title, description and comments -->
		<section>
			<title>
				<message selector="assessment-preview-assessment-title">
					<model type="icon" icon="/icons/test.png" />
					<model ref="assessment.title" type="text" />
					<model type="html" ref="assessment" delegate="SubmissionScore" tool="sakai.mneme" />
					<selectors>
						<selector selector="assessment-preview-assessment-title-no-points">
							<decision reversed="TRUE" model="assessment.hasPoints" />
						</selector>
					</selectors>
				</message>
			</title>
			<container>
				<section>
					<included>
						<decision reversed="TRUE" model="assessment.isValid" />
					</included>
					<container>
						<text>
							<message selector="invalid-instructions">
								<model type="icon" icon="/icons/warning.png" />
								<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
							</message>
						</text>
						<text>
							<message>
								<model type="html" ref="invalidMsg" />
							</message>
						</text>
					</container>
				</section>
				<text>
					<message>
						<model type="html" dirty="TRUE" ref="assessment.presentation.text" />
					</message>
				</text>
				<attachments title="attachments" model="assessment.presentation.attachments">
					<included>
						<hasValueDecision model="assessment.presentation.attachments" />
					</included>
				</attachments>
			</container>
		</section>

		<!-- iterating section for each answer -->
		<section>
			<iterator name="question">
				<model ref="assessment.parts.questions" />
			</iterator>

			<!-- part title -->
			<title>
				<message selector="assessment-preview-part-title">
					<model type="icon" icon="/icons/section.png" />
					<model type="text" ref="question.part.ordering.position" />
					<model type="text" ref="question.part.assessment.parts.size" />
					<model type="text" ref="question.part.title" />
					<selectors>
						<selector selector="assessment-preview-part-title-no-title">
							<hasValueDecision reversed="TRUE" model="question.part.title" />
						</selector>
					</selectors>
				</message>
				<included>
					<decision model="question.partOrdering.isFirst" />
					<decision model="question.part.assessment.parts.showPresentation" />
				</included>
			</title>

			<container>

				<!-- part presentation -->
				<text model="question.part.presentation.text">
					<included>
						<decision model="question.partOrdering.isFirst" />
						<decision model="question.part.assessment.parts.showPresentation" />
					</included>
				</text>
				<attachments title="attachments" model="question.part.presentation.attachments">
					<included>
						<hasValueDecision model="question.part.presentation.attachments" />
						<decision model="question.partOrdering.isFirst" />
						<decision model="question.part.assessment.parts.showPresentation" />
					</included>
				</attachments>

				<section>

					<!-- question header -->
					<title highlighted="TRUE">
						<message>
							<model type="html" ref="question" delegate="FormatQuestionTitle" tool="sakai.mneme" />
						</message>
					</title>

					<container>

						<!--  if invalid -->
						<text>
							<message selector="invalid-question">
								<model type="icon" icon="/icons/warning.png" />
								<model type="html" ref="question.typeSpecificQuestion.invalidMessage" />
							</message>
							<included>
								<decision model="question.isValid" reversed="TRUE" />
							</included>
						</text>

						<!-- Question specific delivery -->
						<modelComponent model="question.typeSpecificQuestion.viewQuestionUi" />

						<!-- reason -->
						<section>
							<container>
								<text>
									<title>
										<message selector="assessment-preview-reason-header">
											<model type="icon" icon="/icons/reason.png" />
										</message>
									</title>
									<message selector="assessment-preview-reason" />
								</text>
							</container>
							<included>
								<decision model="question.explainReason" />
							</included>
						</section>

						<!-- hints -->
						<section collapsed="TRUE" treatment="inlay" maxHeight="400">
							<title plain="TRUE">
								<message selector="show-hints">
									<model type="icon" icon="/icons/hints.png" />
								</message>
							</title>
							<container>
								<text>
									<message>
										<model type="html" dirty="TRUE" ref="question.hints" />
									</message>
								</text>
							</container>
							<included>
								<hasValueDecision model="question.hints" />
								<decision model="question.part.assessment.showHints" />
							</included>
						</section>

						<!-- question feedback -->
						<section treatment="inlay" maxHeight="400">
							<title>
								<message selector="question-feedback">
									<model type="icon" icon="/icons/reason.png" />
								</message>
							</title>
							<container>
								<text>
									<message>
										<model type="html" dirty="TRUE" ref="question.feedback" />
									</message>
								</text>
							</container>
							<included>
								<hasValueDecision model="question.feedback" />
							</included>
						</section>

					</container>
				</section>
			</container>
		</section>

		<!-- nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="prev" accessKey="prev-access" description="preview-prev-description" style="BUTTON">
					<icon icon="/icons/prev.gif" style="LEFT" />
					<disabled>
						<hasValueDecision reversed="TRUE" model="prevAssessmentId" />
					</disabled>
					<destination template="/assessment_preview/{0}{1}">
						<model ref="prevAssessmentId" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="position" />
					</included>
				</navigation>
				<text>
					<message selector="n-of-size">
						<model ref="position" />
						<model ref="size" />
					</message>
					<included>
						<hasValueDecision model="position" />
					</included>
				</text>
				<navigation title="next" accessKey="next-access" description="preview-next-description" style="BUTTON">
					<icon icon="/icons/next.gif" style="RIGHT" />
					<disabled>
						<hasValueDecision reversed="TRUE" model="nextAssessmentId" />
					</disabled>
					<destination template="/assessment_preview/{0}{1}">
						<model ref="nextAssessmentId" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="position" />
					</included>
				</navigation>
				<divider>
					<included>
						<hasValueDecision model="position" />
					</included>
				</divider>
				<navigation title="return" accessKey="return-access" description="return-description" style="BUTTON">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="{0}">
						<model ref="return" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
